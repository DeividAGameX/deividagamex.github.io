<section id="inicio" class="min-h-screen flex items-center pt-16 relative overflow-hidden">
  <!-- Fondo minimalista -->
  <div class="absolute inset-0 z-0">
    <div class="absolute inset-0 bg-gradient-to-b from-neutral-950 via-neutral-900 to-neutral-950"></div>
  </div>
  
  <!-- Contenedor principal -->
  <div class="container mx-auto px-4 py-16 relative z-10">
    <div class="flex flex-col md:flex-row items-center gap-12 md:gap-16">
      <div class="md:w-1/2 text-center md:text-left">
        <h1 class="text-4xl md:text-6xl font-bold mb-6 text-white">
          Hola, soy <span class="text-primary">David</span>
        </h1>
        
        <h2 class="text-2xl md:text-3xl text-gray-300 mb-8 font-anime">
          Desarrollador Full Stack
        </h2>
        
        <p class="text-lg text-gray-400 mb-10 max-w-2xl leading-relaxed">
          Especializado en crear aplicaciones web y en la implementación de soluciones con IA utilizando servicios de AWS.
        </p>
        
        <div class="flex flex-wrap gap-6 justify-center md:justify-start">
          <a href="#contacto" class="btn-anime">
            Contáctame
          </a>
          <a href="#proyectos" class="px-6 py-3 border border-primary text-primary rounded-md hover:bg-primary/10 transition-colors">
            Ver proyectos
          </a>
        </div>
      </div>
      
      <div class="md:w-1/2 flex justify-center">
        <div class="relative w-64 h-64 md:w-80 md:h-80">
          <!-- Círculo sutil detrás del avatar -->
          <div class="absolute inset-0 rounded-full bg-primary/10"></div>
          
          <!-- Avatar con borde sutil -->
          <div class="relative z-10 w-full h-full rounded-full p-1 bg-primary/20">
            <img 
              src="/cv.jpg" 
              alt="David" 
              class="rounded-full w-full h-full object-cover"
            />
          </div>
          
          <!-- Elemento decorativo minimalista -->
          <div class="absolute -bottom-4 -right-4 w-24 h-24 border border-primary/30 rounded-full"></div>
          <div class="absolute -top-4 -left-4 w-16 h-16 border border-primary/30 rounded-full"></div>
        </div>
      </div>
    </div>
  </div>
</section>
